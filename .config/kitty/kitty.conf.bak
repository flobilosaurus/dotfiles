# term             xterm-kitty
font_family      JetBrainsMono Nerd Font Mono 
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 15.0
scrollback_lines 10000
clear_all_shortcuts			yes
macos_quit_when_last_window_closed yes
tab_bar_style slant
kitty_mod ctrl+shift
# move to beginning
map super+left send_text all \x01
# move to end
map super+right send_text all \x05
# remove line
map super+backspace send_text all \x15
# remove word
map alt+backspace send_text all \x17
# jump word left
map alt+left send_text all \x1b\x62
# jump word right
map alt+right send_text all \x1b\x66
map kitty_mod+equal     change_font_size all +1.0
map kitty_mod+minus     change_font_size all -1.0
map kitty_mod+backspace change_font_size all 0
map cmd+c               copy_to_clipboard
map kitty_mod+c         copy_to_clipboard
map cmd+v               paste_from_clipboard
map kitty_mod+v         paste_from_clipboard
map cmd+\               launch --type=os-window --cwd=current

# BEGIN_KITTY_THEME
# Catppuccin Kitty Latte
include current-theme.conf
# END_KITTY_THEME
